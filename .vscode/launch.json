  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [

    {
      "name": "Python Debugger: Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "src/main:app",
        "FLASK_DEBUG": "1",
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload",
        "-p 5006"
      ],
      "jinja": true,
      "autoStartBrowser": false
    }
  ]
}